{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "kind@latest",
    "docker@latest",
    "kubectl@latest",
    "helm@latest",
    "gnumake@latest",
    "nodejs_18@latest",
    "skaffold@latest",
    "python312@latest",
    "yarn@latest"
  ],
  "env": {
    "VENV_DIR": "venv",
    "UV_PYTHON": "venv/bin/python"
  },
  "shell": {
    "init_hook": [
      "make update-tools",
      "source venv/bin/activate",
      "make install"
    ]
  }
}
